.page-body{
  height: 150px;
  width: 100%
}
.swiper-item{
  height: 150px
}
.demo-text-1{
  background: #ddd
}
.demo-text-2{
  background: red
}
.demo-text-3{
  background: blue
}
.type-container{
  width: 100%;
  height: 88rpx;
  background-color: #fff;
  overflow: hidden;
}
.type-navbar{
  white-space: nowrap;
  height: 88rpx;
  width: 100%;
  background-color: #fff;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.type-box{
  width:50%;
  box-sizing: content-box;
  font-size: 24rpx;
  line-height: 84rpx;
  text-align: center;
  display: inline-block;
  overflow: hidden;
  position: relative;
}
.borderBottom{
  position: absolute;
  bottom: 0;
  left: 0;
  height: 2rpx;
  width: 100%;
  background-color: red;
  z-index: 1;
}