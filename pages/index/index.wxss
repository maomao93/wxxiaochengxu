/**index.wxss**/
.page-body{
  height: 150px;
  width: 100%
}
.swiper-item{
  height: 150px
}
.demo-text-1{
  background: #ddd
}
.demo-text-2{
  background: red
}
.demo-text-3{
  background: blue
}
.type-container{
  width: 100%;
  height: 88rpx;
  background-color: #fff;
  overflow: hidden;
}
.type-navbar{
  white-space: nowrap;
  height: 88rpx;
  width: 100%;
  background-color: #fff;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.type-box{
  width:50%;
  box-sizing: content-box;
  font-size: 24rpx;
  line-height: 84rpx;
  text-align: center;
  display: inline-block;
  overflow: hidden;
  position: relative;
}
.borderBottom{
  position: absolute;
  bottom: 0;
  left: 0;
  height: 2rpx;
  width: 100%;
  background-color: red;
  z-index: 1;
}
.list{
  padding-bottom: 48px;
}
.listBody{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.listCenten{
  width: 50%;
  border: 1px solid #eee;
  box-sizing: border-box;
  display: flex;
  text-align: center;
  justify-content:space-between;
  flex-direction: column;  
  margin-bottom: 20rpx;
}
.img-class{
  width: 100%;
  line-height: 320rpx;
  height: 320rpx;
  background: #ddd;
}
.textCen{
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  height: 52rpx;
}
.money{
  color: red;
  margin-right: 16rpx;
}